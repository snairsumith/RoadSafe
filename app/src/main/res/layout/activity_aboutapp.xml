<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/bgColor"
        tools:context="com.example.rst.roadsafe.aboutapp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About App"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:textColor="#fffffbf9"
            android:shadowColor="#ffffdedb"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INFO"
            android:id="@+id/textView8"
            android:textColor="#fffffbf9"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3"
            android:textColor="#fffffbf9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:text="The RoadSafe app is a road safety app that deals with the pre and post accident stages. Drive mode in the app is used to prevent accidents. it blocks the calls that arrives when the vehicle is in motion. and an alert is send to the user about the call. Panic mode is a mode used after an accident has occured. If an accident occurs in a remote area, the victim or any nearby person can bring help to the accident area by clicking the panic mode which will immediately send the gps location to given contacts and nearby places where help will be available 24*7."
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LICENSE"
            android:id="@+id/textView9"
            android:layout_below="@+id/editText3"
            android:textColor="#fffffbf9"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText4"
            android:textColor="#fffffbf9"
            android:text="
This app is licensed to "
            android:layout_below="@+id/textView9"
            android:layout_alignEnd="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:text="  RITHU SANJAY TINTO "
            android:layout_below="@+id/editText4"
            android:layout_toEndOf="@+id/textView9" />
    </RelativeLayout>
